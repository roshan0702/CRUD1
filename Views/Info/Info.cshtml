@model CRUD1.Models.info
@{
    ViewBag.Title = "Info";
}
<style>
    .error{
        color : red;
    }
</style>
<h2>Info</h2>

@using (Html.BeginForm("AddInfo", "Info", FormMethod.Post))
{
<div class="container">
    <div class="form-group">
        @Html.HiddenFor(p =>p.ID)
        <label>Name</label>
        @Html.ValidationMessageFor(p => p.Name, "",new { @class = "error" })
        @Html.TextBoxFor(p => p.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Father Name</label>
        @Html.ValidationMessageFor(p => p.Fname, "", new { @class = "error" })
        @Html.TextBoxFor(p => p.Fname, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.ValidationMessageFor(p => p.Email, "", new { @class = "error" })
        @Html.TextBoxFor(p => p.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Mobile</label>
        @Html.ValidationMessageFor(p => p.Mobile, "", new { @class = "error" })
        @Html.TextBoxFor(p => p.Mobile, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Discription</label>
        @Html.TextAreaFor(p => p.Discription, new { @class = "form-control", @rows = "10", @cols = "30" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-danger">Cancel</button>
    </div>
</div>
}